<%= form_for @user, html: { class: 'form' }, url: account_activation_path(params[:id]) do |user| %>
  <%= render 'form_error', count: @user.errors.count %>

  <%= hidden_field_tag :email, @user.email %>

  <div class='form-section'>
    <div class='form-item'>
      <%= user.label :password, class: 'label' %>
      <%= user.password_field :password, class: 'input text-input', maxlength: 72 %>
      <%= render partial: 'error', collection: @user.errors[:password] %>
    </div>

    <div class='form-item'>
      <%= user.label :password_confirmation, class: 'label' %>
      <%= user.password_field :password_confirmation, class: 'input text-input', maxlength: 72 %>
      <%= render partial: 'error', collection: @user.errors[:password_confirmation] %>
    </div>
  </div>

  <%= user.submit 'Set Password', class: 'button' %>
<% end %>
