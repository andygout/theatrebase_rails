<% provide(:title, 'Edit User Admin Status') %>

<h1 class='header-text'>Edit User Admin Status</h1>

<fieldset class='form'>
  <%= form_for(@user, url: admin_status_path(params[:user_id])) do |f| %>

    <%= f.fields_for :admin do |a| %>
      <div class='form-item'>
        <%= a.check_box :_destroy, { checked: a.object.persisted? }, '0', '1' %>
        <%= a.label :_destroy, 'Admin status', class: 'checkbox' %>
      </div>
    <% end %>

    <%= f.submit 'Update Admin Status', class: 'button' %>
  <% end %>
</fieldset>

