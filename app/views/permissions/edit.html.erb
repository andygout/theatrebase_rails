<% provide(:title, 'Edit User Permissions') %>

<h1 class='header-text'>Edit User Permissions</h1>

<fieldset class='form'>
  <%= form_for(@user, url: permission_path(params[:id])) do |f| %>

    <%= f.fields_for :admin do |a| %>
      <div class='form-item'>
        <%= a.label :status, class: 'label' do %>
          <span>Admin status</span>
          <%= a.check_box :status, class: 'input' %>
        <% end %>
      </div>
    <% end %>

    <%= f.submit 'Update Permissions', class: 'button' %>
  <% end %>
</fieldset>
