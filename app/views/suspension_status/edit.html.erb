<% provide(:title, "Edit user suspension status: #{@page_title}") %>

<h1 class='header-text'>Edit user suspension status: <%= @page_title %></h1>

<fieldset class='form'>
  <%= form_for(@user, url: suspension_status_path(params[:user_id])) do |user| %>

    <%= user.fields_for :suspension do |suspension| %>
      <div class='form-item'>
        <%= suspension.check_box :_destroy, { checked: suspension.object.persisted? }, '0', '1' %>
        <%= suspension.label :_destroy, 'Suspension status', class: 'checkbox' %>
      </div>
    <% end %>

    <%= user.submit 'Update Suspension Status', class: 'button' %>
  <% end %>
</fieldset>

