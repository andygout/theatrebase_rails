<% provide(:title, 'Reset password') %>

<h1 class='header-text'>Reset password</h1>

<fieldset class='form'>
  <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
    <%= render 'partials/error_count', count: @user.errors.count %>

    <%= hidden_field_tag :email, @user.email %>

    <div class='form-item'>
      <%= f.label :password, class: 'label' %>
      <%= f.password_field :password, class: 'input' %>
      <%= render partial: 'partials/error', collection: @user.errors[:password] %>
    </div>

    <div class='form-item'>
      <%= f.label :password_confirmation, class: 'label' %>
      <%= f.password_field :password_confirmation, class: 'input' %>
      <%= render partial: 'partials/error', collection: @user.errors[:password_confirmation] %>
    </div>

    <%= f.submit 'Reset password', class: 'button' %>
  <% end %>
</fieldset>
