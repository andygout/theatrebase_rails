<% provide(:title, 'Request password reset link') %>

<h1 class='header-text'>Request password reset link</h1>

<fieldset class='form'>
  <%= form_for(:password_reset, url: password_resets_path) do |user| %>
    <div class='form-item'>
      <%= user.label :email, class: 'label' %>
      <%= user.email_field :email, class: 'input' %>
    </div>

    <%= user.submit 'Submit', class: 'button' %>
  <% end %>
</fieldset>
