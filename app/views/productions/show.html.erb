<% provide(:title, "#{@production.title}") %>

<%= @content_header %>

<h1 class='title-text'><%= @production.title %></h1>

<%= @dates %>

<% if logged_in? %>
  <%= button_to 'Edit Production',
      edit_production_path(@production.id, @production.url),
      method: :get,
      class: 'button' %>

  <%= button_to 'Delete Production',
      production_path(@production.id, @production.url),
      method: :delete,
      class: 'button',
      data: { confirm: 'Really delete this production?' } %>
<% end %>
