<% provide(:title, "#{@user.name} (user)") %>

<h1 class='header-text'><%= @user.name %>: <%= @user.email %></h1>

<% if current_user? @user %>
  <%= button_to 'Edit User', edit_user_path(@user), method: :get, class: 'button' %>
<% end %>

<% if valid_admin_status_user? @user %>
  <%= button_to 'Edit Admin Status', edit_admin_status_path(@user), method: :get, class: 'button' %>
<% end %>

<% if valid_destroy_user? @user %>
  <%= button_to 'Delete User', @user, method: :delete, class: 'button', data: { confirm: 'Really delete this user?' } %>
<% end %>
