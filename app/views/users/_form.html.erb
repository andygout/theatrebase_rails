<fieldset class='form'>
  <%= form_for @user do |f| %>
    <%= render 'partials/error_count', count: @user.errors.count %>

    <%= f.label :name, class: 'label' %>
    <%= f.text_field :name, class: 'input' %>
    <%= render partial: 'partials/error', collection: @user.errors[:name] %>

    <%= f.label :email, class: 'label' %>
    <%= f.email_field :email, class: 'input' %>
    <%= render partial: 'partials/error', collection: @user.errors[:email] %>

    <%= f.label :password, class: 'label' %>
    <%= f.password_field :password , class: 'input'%>
    <%= render partial: 'partials/error', collection: @user.errors[:password] %>

    <%= f.label :password_confirmation, 'Password confirmation', class: 'label' %>
    <%= f.password_field :password_confirmation, class: 'input' %>
    <%= render partial: 'partials/error', collection: @user.errors[:password_confirmation] %>

    <%= f.submit nil, class: 'button' %>
  <% end %>
</fieldset>