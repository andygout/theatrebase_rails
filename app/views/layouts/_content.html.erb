<main class='main-content'>

  <div class='head-alert'>
    <% flash.each do |msg_type, msg| %>
      <%= content_tag(:p, msg, class: "alert-#{msg_type}") %>
    <% end %>
  </div>

  <% if @content_header %><div class='content-label content-header'><%= @content_header %></div><% end %>

  <% if @page_title %><h1 class='title-text'><%= @page_title %></h1><% end %>

  <%= yield %>
</main>
