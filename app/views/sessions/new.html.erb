<% provide(:title, 'Log in') %>

<h1 class='header-text'>Log in</h1>

<fieldset class='form'>
  <%= form_for(:session, url: log_in_path) do |f| %>
    <div class='form-item'>
      <%= f.label :email, class: 'label' %>
      <%= f.email_field :email, class: 'input' %>
    </div>

    <div class='form-item'>
      <%= f.label :password, class: 'label' %>
      <%= f.password_field :password, class: 'input' %>
    </div>

    <div class='form-item'>
      <%= f.check_box :remember_me, class: 'checkbox' %>
      <%= f.label :remember_me, class: 'checkbox' %>
    </div>

    <div class='form-item'>
      <%= link_to 'Reset password', new_password_reset_path %>
    </div>

    <%= f.submit 'Log in', class: 'button' %>
  <% end %>
</fieldset>
