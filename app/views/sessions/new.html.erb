<%= form_for :session, html: { id: 'new-session-form' }, url: log_in_path do |session| %>
  <div class='form-section'>
    <div class='form-item'>
      <%= session.label :email, class: 'label' %>
      <%= session.email_field :email, class: 'input text-input', maxlength: 255 %>
    </div>

    <div class='form-item'>
      <%= session.label :password, class: 'label' %>
      <%= session.password_field :password, class: 'input text-input', maxlength: 72 %>
    </div>

    <div class='form-item'>
      <%= session.check_box :remember_me, class: 'checkbox' %>
      <%= session.label :remember_me, class: 'checkbox' %>
    </div>

    <div class='form-item'>
      <%= link_to 'Reset password', new_password_reset_path %>
    </div>
  </div>

  <%= session.submit 'Log In', class: 'button' %>
<% end %>
