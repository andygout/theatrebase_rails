<% provide(:title, "Log in") %>

<h1>Log in</h1>

<fieldset>
  <%= form_for(:session, url: login_path) do |f| %>
    <%= f.label :email %>
    <%= f.email_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :remember_me do %>
      <span>Remember me</span>
      <%= f.check_box :remember_me %>
    <% end %>

    <%= f.submit "Log in", class: 'button' %>
  <% end %>
</fieldset>