<% provide(:title, 'Log in') %>

<p class='title-text'>Log in</p>

<fieldset class='form'>
  <%= form_for(:session, url: log_in_path) do |session| %>
    <div class='form-item'>
      <%= session.label :email, class: 'label' %>
      <%= session.email_field :email, class: 'input text-input' %>
    </div>

    <div class='form-item'>
      <%= session.label :password, class: 'label' %>
      <%= session.password_field :password, class: 'input text-input' %>
    </div>

    <div class='form-item'>
      <%= session.check_box :remember_me, class: 'checkbox' %>
      <%= session.label :remember_me, class: 'checkbox' %>
    </div>

    <div class='form-item'>
      <%= link_to 'Reset password', new_password_reset_path %>
    </div>

    <%= session.submit 'Log In', class: 'button' %>
  <% end %>
</fieldset>
